                        </Border>
                        <TextBlock Foreground="Red" Text="{Binding [0].ErrorContent}" Margin="5,2,0,10" FontSize="12" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBox Style with Validation -->
    <Style TargetType="ComboBox" x:Key="FormComboBoxStyle">
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderBrush" Value="#CCCCCC" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Validation.ErrorTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <StackPanel>
                        <Border BorderBrush="Red" BorderThickness="1" CornerRadius="3">
                            <AdornedElementPlaceholder />
                        </Border>
                        <TextBlock Foreground="Red" Text="{Binding [0].ErrorContent}" Margin="5,0,0,10" FontSize="12" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
