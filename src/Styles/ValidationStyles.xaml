<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Label Style -->
    <Style TargetType="Label" x:Key="FormLabelStyle">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,5" />
    </Style>

    <!-- TextBox Style with Validation -->
    <Style TargetType="TextBox" x:Key="FormTextBoxStyle">
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="BorderBrush" Value="#CCCCCC" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Validation.ErrorTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <StackPanel>
                        <Border BorderBrush="Red" BorderThickness="1" CornerRadius="3">
                            <AdornedElementPlaceholder />
                        </Border>
                        <TextBlock Foreground="Red" Text="{Binding [0].ErrorContent}" Margin="5,2,0,10" FontSize="12" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

