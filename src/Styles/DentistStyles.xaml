<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 1) Outer Border Style for the entire UserControl content -->
    <Style x:Key="OuterBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="BorderBrush" Value="#CCCCCC"/>
        <Setter Property="Background" Value="#FFFFFF"/>
    </Style>

    <!-- 2) Header border style (for the top row with dentist name) -->
    <Style x:Key="HeaderBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Background" Value="#DDDDDD"/> <!-- slightly darker gray -->
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#CBCBCB"/>
    </Style>

    <!-- 3) GroupBox style for left panel sections -->
    <Style x:Key="DentistGroupBoxStyle" TargetType="GroupBox">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#AAAAAA"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="#333"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- 4) Navigation bar style -->
    <Style x:Key="NavBarBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Background" Value="#E8E8E8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#C2C2C2"/>
    </Style>

    <!-- 5) Style for day columns (Mon-Fri) -->
    <Style x:Key="DayColumnBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="BorderBrush" Value="#BBBBBB"/>
        <Setter Property="Background" Value="#FFFFFF"/>
    </Style>

    <!-- 6) Style for each appointment block (ItemsControl items) -->
    <Style x:Key="AppointmentBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderBrush" Value="#AAAAAA"/>
        <Setter Property="Background" Value="#FAFAFA"/>
    </Style>

    <!-- 7) Text styles for appointments -->
    <Style x:Key="AppointmentTimeTextStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Foreground" Value="#333"/>
    </Style>

    <Style x:Key="AppointmentGeneralTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Margin" Value="0,0,0,3"/>
        <Setter Property="Foreground" Value="#555"/>
    </Style>

    <!-- 8) Navigation buttons (Previous/Next week) -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Foreground" Value="#333"/>
        <Setter Property="Background" Value="#F0F0F0"/>
        <Setter Property="BorderBrush" Value="#AAAAAA"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#E2E2E2"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#D0D0D0"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
