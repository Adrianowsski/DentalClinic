<Window x:Class="DentalClinicWPF.Views.Invoice.EditInvoiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Invoice" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="Appointment" />
                <ComboBox ItemsSource="{Binding Appointments}" 
                          DisplayMemberPath="DisplayInfo"
                          SelectedValuePath="AppointmentID"
                          SelectedValue="{Binding Invoice.AppointmentID, UpdateSourceTrigger=PropertyChanged}" 
                          Margin="0,5" />

                <Label Content="Invoice Date" />
                <DatePicker SelectedDate="{Binding Invoice.InvoiceDate, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

                <Label Content="Total Amount" />
                <TextBox Text="{Binding Invoice.TotalAmount, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

                <Label Content="Payment Status" />
                <CheckBox Content="Paid" IsChecked="{Binding Invoice.IsPaid, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="100" Margin="5" Command="{Binding CancelCommand}" />
            <Button Content="Save" Width="100" Margin="5" Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</Window>