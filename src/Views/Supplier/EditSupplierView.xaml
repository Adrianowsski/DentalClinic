<Window x:Class="DentalClinicWPF.Views.Supplier.EditSupplierView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Supplier" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel>
            <Label Content="Company Name"/>
            <TextBox Text="{Binding EditingSupplier.CompanyName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <Label Content="Contact Name"/>
            <TextBox Text="{Binding EditingSupplier.ContactName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <Label Content="Phone Number"/>
            <TextBox Text="{Binding EditingSupplier.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <Label Content="Email"/>
            <TextBox Text="{Binding EditingSupplier.Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>

            <Label Content="Address"/>
            <TextBox Text="{Binding EditingSupplier.Address, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="100" Margin="5" Command="{Binding CancelCommand}"/>
            <Button Content="Save" Width="100" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="Delete" Width="100" Margin="5" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</Window>