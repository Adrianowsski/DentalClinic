<Window x:Class="DentalClinicWPF.Views.Treatment.AddEditTreatmentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Treatment" Height="520" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Name -->
                <Label Content="Name" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Description -->
                <Label Content="Description" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" 
                         AcceptsReturn="True" Height="100" TextWrapping="Wrap" />

                <!-- Price -->
                <Label Content="Price (PLN)" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Duration -->
                <Label Content="Duration (minutes)" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding DurationMinutes, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="5" />
            <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
