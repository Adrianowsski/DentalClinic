<UserControl x:Class="DentalClinicWPF.Views.Treatment.TreatmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DentalClinicWPF.Views.Treatment">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox Width="300" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     ToolTip="Search by Name or Description" />
            <Button Content="Search" Command="{Binding SearchCommand}" Margin="10,0,0,0" Width="100" />
            <Button Content="Reload" Command="{Binding ReloadCommand}" Margin="10,0,0,0" Width="100" />
            <Button Content="Add Treatment" Command="{Binding AddTreatmentCommand}" Width="150" Margin="10,0,0,0" />
            <Button Content="Edit Treatment" Command="{Binding EditTreatmentCommand}" 
                    Width="150" Margin="10,0,0,0" 
                    IsEnabled="{Binding SelectedTreatment, Converter={StaticResource NullToBoolConverter}}" />
        </StackPanel>

        <!-- Sorting Section -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <ComboBox Width="150" ItemsSource="{Binding SortOptions}" 
                      SelectedItem="{Binding SelectedSortOption}" 
                      ToolTip="Select sorting criterion" />
            <Button Content="Sort" Command="{Binding SortCommand}" Width="100" Margin="10,0,0,0" />
        </StackPanel>

        <!-- Treatment List -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Treatments}" 
                  AutoGenerateColumns="False" 
                  SelectedItem="{Binding SelectedTreatment, Mode=TwoWay}" IsReadOnly="True" 
                  SelectionMode="Single" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" />
                <DataGridTextColumn Header="Price" Binding="{Binding PriceFormatted}" Width="Auto" />
                <DataGridTextColumn Header="Duration (min)" Binding="{Binding Duration.TotalMinutes}" Width="Auto" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
