<Window x:Class="DentalClinicWPF.Views.MedicalRecord.AddMedicalRecordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Medical Record" Height="600" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <Label Content="Patient" />
            <ComboBox ItemsSource="{Binding Patients}" 
                      DisplayMemberPath="DisplayInfo" 
                      SelectedValuePath="PatientID" 
                      SelectedValue="{Binding MedicalRecord.PatientID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                      Margin="0,5,0,10" />

            <Label Content="Dentist" />
            <ComboBox ItemsSource="{Binding Dentists}" 
                      DisplayMemberPath="DisplayInfo" 
                      SelectedValuePath="DentistID" 
                      SelectedValue="{Binding MedicalRecord.DentistID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                      Margin="0,5,0,10" />

            <Label Content="Date" />
            <DatePicker SelectedDate="{Binding MedicalRecord.Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        Margin="0,5,0,10" />

            <Label Content="Notes" />
            <TextBox Text="{Binding MedicalRecord.Notes, UpdateSourceTrigger=PropertyChanged}" 
                     AcceptsReturn="True" Height="100" Margin="0,5,0,10" />

            <Label Content="Attachments (optional)" />
            <Button Content="Upload Attachment" Width="150" Margin="0,5,0,10" 
                    Command="{Binding UploadAttachmentCommand}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="5" />
            <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
