<UserControl x:Class="DentalClinicWPF.Views.Dashboard.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/DashboardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="2*"/>   <!-- Appointments, Financial Stats, Revenue per Dentist -->
            <RowDefinition Height="2*"/>   <!-- Charts -->
            <RowDefinition Height="Auto"/> <!-- Export buttons -->
            <RowDefinition Height="Auto"/> <!-- Add buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="1.5*"/> <!-- Column for Revenue per Dentist -->
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Text="Dashboard"
                   FontSize="24"
                   FontWeight="Bold"
                   Grid.Row="0"
                   Margin="0,0,0,10"
                   Style="{StaticResource DashboardTextBlockStyle}"/>

        <!-- Appointments, Financial Stats, Revenue per Dentist -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="1.5*"/> <!-- Column for Revenue per Dentist -->
            </Grid.ColumnDefinitions>

            <!-- Upcoming Appointments -->
            <GroupBox Header="Upcoming Appointments" Grid.Column="0" Margin="0,0,10,0" Style="{StaticResource DashboardGroupBoxStyle}">
                <DataGrid ItemsSource="{Binding UpcomingAppointments}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Style="{StaticResource DashboardDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate, StringFormat=d}" Width="*" />
                        <DataGridTextColumn Header="Time" Binding="{Binding AppointmentTime}" Width="*" />
                        <DataGridTextColumn Header="Patient" Binding="{Binding PatientName}" Width="*" />
                        <DataGridTextColumn Header="Dentist" Binding="{Binding DentistName}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Financial Statistics -->
            <GroupBox Header="Financial Statistics" Grid.Column="1" Style="{StaticResource DashboardGroupBoxStyle}">
                <StackPanel>
                    <TextBlock Text="{Binding TotalRevenue, StringFormat='Total Revenue: {0:C}'}"
                               Margin="0,5"
                               Style="{StaticResource DashboardTextBlockStyle}"/>
                    <TextBlock Text="{Binding UnpaidInvoices, StringFormat='Unpaid Invoices: {0}'}"
                               Margin="0,5"
                               Style="{StaticResource DashboardTextBlockStyle}"/>
                </StackPanel>
            </GroupBox>

            <!-- Revenue per Dentist -->
            <GroupBox Header="Revenue per Dentist" Grid.Column="2" Margin="10,0,0,0" Style="{StaticResource DashboardGroupBoxStyle}">
                <DataGrid ItemsSource="{Binding DentistRevenue}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Style="{StaticResource DashboardDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Dentist" Binding="{Binding DentistName}" Width="*" />
                        <DataGridTextColumn Header="Revenue" Binding="{Binding Revenue, StringFormat=C}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>

        <!-- Revenue Over Time Chart -->
        <GroupBox Header="Revenue Over Time" Grid.Row="2" Grid.ColumnSpan="3" Style="{StaticResource DashboardGroupBoxStyle}" Margin="0,10,0,0">
            <wpf:CartesianChart Series="{Binding RevenueSeries}">
                <wpf:CartesianChart.AxisX>
                    <wpf:Axis Title="Month" Labels="{Binding RevenueLabels}"/>
                </wpf:CartesianChart.AxisX>
                <wpf:CartesianChart.AxisY>
                    <wpf:Axis Title="Revenue" LabelFormatter="{Binding YFormatter}"/>
                </wpf:CartesianChart.AxisY>
            </wpf:CartesianChart>
        </GroupBox>

        <!-- Kontener na wszystkie przyciski -->
        <StackPanel Grid.Row="4"
                    Grid.ColumnSpan="3"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,20">

            <!-- Nagłówek dla sekcji eksportu -->
            <TextBlock Text="Export Dashboard"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       Style="{StaticResource DashboardTextBlockStyle}"
                       HorizontalAlignment="Center"/>

            <!-- Przyciski eksportu -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Export to PDF"
                        Command="{Binding ExportReportCommand}"
                        Width="200"
                        Height="40"
                        Style="{StaticResource DashboardButtonStyle}"
                        Margin="10,0"/>
                <Button Content="Export to Excel"
                        Command="{Binding ExportToExcelCommand}"
                        Width="200"
                        Height="40"
                        Style="{StaticResource DashboardButtonStyle}"
                        Margin="10,0"/>
            </StackPanel>

            <!-- Przyciski dodawania -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Add Appointment"
                        Command="{Binding AddAppointmentCommand}"
                        Width="150"
                        Height="40"
                        Margin="10,0"/>
                <Button Content="Add Patient"
                        Command="{Binding RegisterPatientCommand}"
                        Width="150"
                        Height="40"
                        Margin="10,0"/>
            </StackPanel>

        </StackPanel>


    </Grid>
</UserControl>
