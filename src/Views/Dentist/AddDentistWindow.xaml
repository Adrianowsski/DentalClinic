<Window x:Class="DentalClinicWPF.Views.Dentist.AddDentistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DentalClinicWPF.ViewModels.Dentist"
        Title="Add New Dentist" Height="600" Width="500" WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <!-- First Name -->
                <Label Content="First Name" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Last Name -->
                <Label Content="Last Name" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Specialization -->
                <Label Content="Specialization" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding Specialization, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Phone Number -->
                <Label Content="Phone Number" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Email -->
                <Label Content="Email" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Room -->
                <Label Content="Room" Style="{StaticResource FormLabelStyle}" />
                <ComboBox ItemsSource="{Binding Rooms}" 
                          DisplayMemberPath="RoomNumber" 
                          SelectedValuePath="RoomID" 
                          SelectedValue="{Binding RoomID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                          Style="{StaticResource FormComboBoxStyle}" />
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="5" />
            <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
