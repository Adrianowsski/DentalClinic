<UserControl x:Class="DentalClinicWPF.Views.Appointment.AppointmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Toolbar -->
            <RowDefinition Height="Auto" /> <!-- Sorting -->
            <RowDefinition Height="*" />    <!-- Main Content -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox Width="300" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     ToolTip="Search by Patient, Dentist, or Treatment" 
                     Margin="0,0,10,0" />
            <Button Content="Search" Command="{Binding SearchCommand}" Margin="0,0,10,0" Width="100" />
            <Button Content="Reload" Command="{Binding ReloadCommand}" Margin="0,0,10,0" Width="100" />
            <Button Content="Add Appointment" Command="{Binding AddAppointmentCommand}" Width="150" Margin="0,0,10,0" />
            <Button Content="Edit Appointment" Command="{Binding EditAppointmentCommand}" 
                    Width="150" Margin="0,0,10,0" 
                    IsEnabled="{Binding SelectedAppointment, Converter={StaticResource NullToBoolConverter}}" />
        </StackPanel>

        <!-- Sorting -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <ComboBox Width="150" ItemsSource="{Binding SortOptions}" 
                      SelectedItem="{Binding SelectedSortOption}" 
                      ToolTip="Select sorting criterion" 
                      Margin="0,0,10,0" />
            <Button Content="Sort" Command="{Binding SortCommand}" Width="100" />
        </StackPanel>

        <!-- Appointments List -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Appointments}" 
                  AutoGenerateColumns="False" 
                  SelectedItem="{Binding SelectedAppointment}" 
                  IsReadOnly="True" 
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Patient" Binding="{Binding Patient.DisplayInfo}" Width="*" />
                <DataGridTextColumn Header="Dentist" Binding="{Binding Dentist.DisplayInfo}" Width="*" />
                <DataGridTextColumn Header="Treatment" Binding="{Binding Treatment.DisplayInfo}" Width="*" />
                <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate, StringFormat=yyyy-MM-dd}" Width="150" />
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime, StringFormat=hh\\:mm}" Width="150" />
                <DataGridTextColumn Header="End Time" Binding="{Binding EndTime, StringFormat=hh\\:mm}" Width="150" />
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
