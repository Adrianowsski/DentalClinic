<Window x:Class="DentalClinicWPF.Views.Inventory.EditInventoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Inventory" Height="450" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="Product Name" />
                <TextBox Text="{Binding Inventory.ProductName, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

                <Label Content="Quantity" />
                <TextBox Text="{Binding Inventory.Quantity, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

                <Label Content="Reorder Level" />
                <TextBox Text="{Binding Inventory.ReorderLevel, UpdateSourceTrigger=PropertyChanged}" Margin="0,5" />

                <Label Content="Supplier" />
                <ComboBox ItemsSource="{Binding Suppliers}" 
                          DisplayMemberPath="CompanyName" 
                          SelectedValuePath="SupplierID" 
                          SelectedValue="{Binding Inventory.SupplierID, UpdateSourceTrigger=PropertyChanged}" 
                          Margin="0,5" />

                <Label Content="Room" />
                <ComboBox ItemsSource="{Binding Rooms}" 
                          DisplayMemberPath="RoomNumber" 
                          SelectedValuePath="RoomID" 
                          SelectedValue="{Binding Dentist.RoomID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                          Margin="0,5" />

            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="100" Margin="5" Command="{Binding CancelCommand}" />
            <Button Content="Save" Width="100" Margin="5" Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</Window>
