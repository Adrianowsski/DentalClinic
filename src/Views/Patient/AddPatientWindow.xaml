<Window x:Class="DentalClinicWPF.Views.Patient.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DentalClinicWPF.ViewModels.Patient"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        Title="Add New Patient" Height="700" Width="500" WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <!-- First Name -->
                <Label Content="First Name" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Last Name -->
                <Label Content="Last Name" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Date of Birth -->
                <Label Content="Date of Birth" Style="{StaticResource FormLabelStyle}" />
                <DatePicker SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                            Style="{StaticResource FormDatePickerStyle}" />

                <!-- Gender -->
                <Label Content="Gender" Style="{StaticResource FormLabelStyle}" />
                <ComboBox SelectedItem="{Binding Gender, UpdateSourceTrigger=PropertyChanged}" 
                          Style="{StaticResource FormComboBoxStyle}">
                    <ComboBox.ItemsSource>
                        <x:Array Type="system:String">
                            <system:String>Male</system:String>
                            <system:String>Female</system:String>
                            <system:String>Other</system:String>
                        </x:Array>
                    </ComboBox.ItemsSource>
                </ComboBox>

                <!-- Phone Number -->
                <Label Content="Phone Number" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Email -->
                <Label Content="Email" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Address -->
                <Label Content="Address" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource FormTextBoxStyle}" />
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="5" />
            <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
