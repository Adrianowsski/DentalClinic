<Window x:Class="DentalClinicWPF.Views.Employee.AddEmployeeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Employee" Height="650" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <!-- First Name -->
                <Label Content="First Name" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Last Name -->
                <Label Content="Last Name" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Position -->
                <Label Content="Position" Style="{StaticResource FormLabelStyle}" />
                <ComboBox SelectedValue="{Binding Position, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                          SelectedValuePath="Content"
                          Style="{StaticResource FormComboBoxStyle}">
                    <ComboBoxItem Content="Receptionist" />
                    <ComboBoxItem Content="Dental Assistant" />
                </ComboBox>

                <!-- Phone Number -->
                <Label Content="Phone Number" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Email -->
                <Label Content="Email" Style="{StaticResource FormLabelStyle}" />
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                         Style="{StaticResource FormTextBoxStyle}" />

                <!-- Assign to Dentist (Optional) -->
                <Label Content="Assign to Dentist (Optional)" Style="{StaticResource FormLabelStyle}" />
                <ComboBox ItemsSource="{Binding Dentists}"
                          DisplayMemberPath="DisplayInfo"
                          SelectedValuePath="DentistID"
                          SelectedValue="{Binding DentistID, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource FormComboBoxStyle}" />
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="5" />
            <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
