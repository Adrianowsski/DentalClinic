<UserControl x:Class="DentalClinicWPF.Views.Equipment.EquipmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:DentalClinicWPF.Converters"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Toolbar -->
            <RowDefinition Height="Auto" /> <!-- Sorting -->
            <RowDefinition Height="*" />    <!-- Equipment List -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox Width="300" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalAlignment="Center" 
                     ToolTip="Search by Name, Model, or Serial Number" 
                     Margin="0,0,10,0" />
            <Button Content="Search" Command="{Binding SearchCommand}" Margin="0,0,10,0" Width="100" />
            <Button Content="Reload" Command="{Binding ReloadCommand}" Margin="0,0,10,0" Width="100" />
            <Button Content="Add Equipment" Command="{Binding AddEquipmentCommand}" Width="150" Margin="0,0,10,0" />
            <Button Content="Edit Equipment" Command="{Binding EditEquipmentCommand}" 
                    Width="150" Margin="0,0,10,0" 
                    IsEnabled="{Binding SelectedEquipment, Converter={StaticResource NullToBoolConverter}}" />
        </StackPanel>

        <!-- Sorting -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <ComboBox Width="150" ItemsSource="{Binding SortOptions}" 
                      SelectedItem="{Binding SelectedSortOption}" 
                      ToolTip="Select sorting criterion" 
                      Margin="0,0,10,0" />
            <Button Content="Sort" Command="{Binding SortCommand}" Width="100" />
        </StackPanel>

        <!-- Equipment List -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding EquipmentList}" 
                  AutoGenerateColumns="False" 
                  SelectedItem="{Binding SelectedEquipment}" 
                  IsReadOnly="True" 
                  SelectionMode="Single" 
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="*" />
                <DataGridTextColumn Header="Serial Number" Binding="{Binding SerialNumber}" Width="*" />
                <DataGridTextColumn Header="Purchase Date" Binding="{Binding PurchaseDate, StringFormat=d}" Width="*" />
                <DataGridTextColumn Header="Last Service Date" Binding="{Binding LastServiceDate, StringFormat=d}" Width="*" />
                <DataGridTextColumn Header="Room" Binding="{Binding Room.RoomNumber}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
