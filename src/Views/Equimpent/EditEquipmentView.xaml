<Window x:Class="DentalClinicWPF.Views.Equipment.EditEquipmentView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Equipment" Height="600" Width="600" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel>
                            <Border BorderBrush="Red" BorderThickness="1">
                                <AdornedElementPlaceholder />
                            </Border>
                            <TextBlock Foreground="Red" 
                                       Text="{Binding [0].ErrorContent}" 
                                       FontSize="12" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Name" />
            <TextBox Text="{Binding EditingEquipment.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />

            <Label Content="Model" />
            <TextBox Text="{Binding EditingEquipment.Model, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />

            <Label Content="Serial Number" />
            <TextBox Text="{Binding EditingEquipment.SerialNumber, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" />

            <Label Content="Purchase Date" />
            <DatePicker SelectedDate="{Binding EditingEquipment.PurchaseDate}" />

            <Label Content="Last Service Date" />
            <DatePicker SelectedDate="{Binding EditingEquipment.LastServiceDate}" />

            <Label Content="Room" />
            <ComboBox ItemsSource="{Binding Rooms}" 
                      SelectedItem="{Binding SelectedRoom}" 
                      DisplayMemberPath="RoomNumber" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,20,0,0">
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" />
                <Button Content="Save" Command="{Binding SaveCommand}" Width="100" />
                <Button Content="Delete" Command="{Binding DeleteCommand}" Width="100" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
