<Window x:Class="DentalClinicWPF.Views.LabOrder.EditLabOrderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Lab Order" Height="550" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,0,0,10">
                <Label Content="Patient" />
                <ComboBox ItemsSource="{Binding Patients}" 
                          DisplayMemberPath="DisplayInfo" 
                          SelectedValuePath="PatientID" 
                          SelectedValue="{Binding LabOrder.PatientID, Mode=TwoWay}" />

                <Label Content="Dentist" Margin="0,10,0,0" />
                <ComboBox ItemsSource="{Binding Dentists}" 
                          DisplayMemberPath="DisplayInfo" 
                          SelectedValuePath="DentistID" 
                          SelectedValue="{Binding LabOrder.DentistID, Mode=TwoWay}" />

                <Label Content="Order Date" Margin="0,10,0,0" />
                <DatePicker SelectedDate="{Binding LabOrder.OrderDate, Mode=TwoWay}" />

                <Label Content="Description" Margin="0,10,0,0" />
                <TextBox Text="{Binding LabOrder.Description, Mode=TwoWay}" AcceptsReturn="True" Height="100" />

                <Label Content="Status" Margin="0,10,0,0" />
                <TextBox Text="{Binding LabOrder.Status, Mode=TwoWay}" />
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="5" />
            <Button Content="Save" Command="{Binding SaveCommand}" Width="100" Margin="5" />
            <Button Content="Delete" Command="{Binding DeleteCommand}" Width="100" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
